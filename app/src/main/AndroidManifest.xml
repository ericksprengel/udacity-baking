<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ericksprengel.android.baking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.BakingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.recipes.RecipesActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".widgets.recipe.RecipeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recipe_widget_info" />
        </receiver>

        <activity android:name=".widgets.recipe.RecipeWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <service android:name=".widgets.recipe.RecipeWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <activity
            android:name=".ui.recipe.RecipeActivity"
            android:label="@string/title_recipeitem_list"
            android:parentActivityName=".ui.recipes.RecipesActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ericksprengel.android.baking.ui.recipes.RecipesActivity" />
        </activity>
        <activity
            android:name=".ui.recipe.StepActivity"
            android:label="@string/step_ac_title"
            android:parentActivityName=".ui.recipe.RecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ericksprengel.android.baking.ui.recipe.RecipeActivity" />
        </activity>
        <activity
            android:name=".ui.recipe.IngredientsActivity"
            android:label="@string/ingredients_ac_title"
            android:parentActivityName=".ui.recipe.RecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.ericksprengel.android.baking.ui.recipe.RecipeActivity" />
        </activity>
    </application>

</manifest>